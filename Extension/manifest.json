{
  "name": "Bronymity",
  "description": "A browser anonymity tool - preventing others from finding out important information about your browser",
  "version": "0.2",
  "background": {
   "scripts": [
    "BigInteger.min.js",
    "md5.min.js",
    "background.js"
  ]
  },
  "browser_action": {
      "default_title": "Bronymity",     
      "default_popup": "html/panel.html"
  },
  "permissions":[
    "tabs",
    "webNavigation", //?
  	"webRequest",
  	"webRequestBlocking",
    "notifications",
  	"<all_urls>",
    "activeTab",
    "fontSettings",
    "unlimitedStorage",
    "contentSettings",
    "http://*/*", 
    "https://*/*"
  ],
  "manifest_version": 2
}